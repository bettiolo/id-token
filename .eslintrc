{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true
  },
  "plugins": ["babel"],
  "rules": {
    "generator-star-spacing": 0,
    "new-cap": 0,
    "object-curly-spacing": 0,
    "object-shorthand": 0,
    "arrow-parens": 0,
    "no-await-in-loop": 0,

    "babel/generator-star-spacing": 2,
    "babel/new-cap": 2,
    "babel/object-curly-spacing": 2,
    "babel/object-shorthand": 2,
    "babel/arrow-parens": 2,
    "babel/no-await-in-loop": 2
  }
}
